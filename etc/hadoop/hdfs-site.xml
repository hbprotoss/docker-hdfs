<configuration>
	<property>
		<name>dfs.nameservices</name>
		<value>mycluster</value>
	</property>

	<property>
		<name>dfs.ha.namenodes.mycluster</name>
		<value>nn1,nn2</value>
	</property>

	<property>
		<name>dfs.namenode.rpc-address.mycluster.nn1</name>
		<value>hdfs1:8020</value>
	</property>
	<property>
		<name>dfs.namenode.rpc-address.mycluster.nn2</name>
		<value>hdfs2:8020</value>
	</property>

	<property>
		<name>dfs.namenode.http-address.mycluster.nn1</name>
		<value>hdfs1:50070</value>
	</property>
	<property>
		<name>dfs.namenode.http-address.mycluster.nn2</name>
		<value>hdfs2:50070</value>
	</property>

	<property>
		<name>dfs.namenode.http-bind-host.mycluster.nn1</name>
		<value>0.0.0.0</value>
	</property>
	<property>
		<name>dfs.namenode.http-bind-host.mycluster.nn2</name>
		<value>0.0.0.0</value>
	</property>

	<property>
		<name>dfs.namenode.shared.edits.dir</name>
		<value>qjournal://hdfs1:8485;hdfs2:8485/mycluster</value>
	</property>

	<property>
		<name>dfs.ha.fencing.methods</name>
		<value>sshfence</value>
	</property>
	<property>
		<name>dfs.ha.fencing.ssh.private-key-files</name>
		<value>/home/root/.ssh/id_rsa</value>
	</property>
	<property>
		<name>dfs.ha.fencing.ssh.connect-timeout</name>
		<value>30000</value>
	</property>

	<property>
		<name>dfs.journalnode.edits.dir</name>
		<value>/data/dfs/journal/edits</value>
	</property>
</configuration>
